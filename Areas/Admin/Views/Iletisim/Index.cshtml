@model IEnumerable<restoran.Models.Iletisim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                İsim Soyisim
            </th>
            <th>
                Email
            </th>
            <th>
                Telefon No
            </th>
            <th>
                Mesaj
            </th>
            <th>
                Tarih
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
                
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
