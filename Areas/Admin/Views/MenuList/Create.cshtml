@model restoran.Models.MenuList

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div class="row">
    
    <div class="col-md-4">
        <br/>      
        <h4 class="text-success">Ürün ekleme</h4>
        <!--dışarıdan resim eklemek için-->
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Başlık
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                Açıklama
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                Fiyat
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                Resim
                <input asp-for="Resim" class="form-control" type="file" style="width:300px; height:100px;" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                Kategori
                <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-primary">Listeye dön</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
