@model restoran.Models.SiparisList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sipariş Detayı</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            İsim Soyisim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isim)
        </dd>
        <dt class="col-sm-2">
            Telefon No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelNo)
        </dd>
        <dt class="col-sm-2">
            Kişi sayısı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KisiSayisi)
        </dd>
        <dt class="col-sm-2">
            Masa No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MasaNo)
        </dd>
        <dt class="col-sm-2">
            Not
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Not)
        </dd>
        <dt class="col-sm-2">
            Siparişler
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Siparisler)
        </dd>
        <dt class="col-sm-2">
            Siparişin durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SiparisDurum)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Güncelle</a> 
    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
</div>
