@model restoran.Models.Kategori

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3>Silmek istediğinizden emin misiniz?</h3>

<br />
<div>

    <dl class="row">
        <dt style="color:red;" class="col-sm-2">
            Kategori Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isim)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <br />
        <input type="submit" value="Sil" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
    </form>
</div>
