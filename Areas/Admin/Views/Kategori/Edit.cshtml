@model restoran.Models.Kategori

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Resim Ekleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Kategori
                <textarea asp-for="Isim" class="form-control"></textarea>
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-primary ">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>


<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
