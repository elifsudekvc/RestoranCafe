@model restoran.Models.Galeri

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Silmek istediğinizden emin misiniz?</h3>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            Resim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resim)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Listeye Dön</a>
    </form>
</div>
